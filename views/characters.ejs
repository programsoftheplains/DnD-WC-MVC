<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <h1>Your Characters</h1>
    <ul>
    <% characters.forEach( el => {  %>
        <li class="characterName" data-id="<%=el._id%>">
            <a href="/inventory/<%= el._id%>"><%= el.characterName %></a>
            <span class="charName"><%= el.characterName %></span>
            <span><%= el.strScore %></span>
            <form action="/characters/deleteCharacter/<%= el.id %>?_method=DELETE" method="POST" class="col-3">
                <button class="btn btn-primary fa fa-trash" type="submit">Delete</button>
            </form>
        </li>
    <%  })  %>
    </ul>

    <form action="/characters/createCharacter" method="POST">
        <input type="text" placeholder="Name" name="characterName">
        <input type="number" placeholder="Str Score" name="strScore">
        <input type="submit">
    </form>

    <a href="/homebrews">Homebrew Bank</a>

    <a href="/logout">Logout</a>

    <script src="../js/main.js"></script>
</body>
</html>